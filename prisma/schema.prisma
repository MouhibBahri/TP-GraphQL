

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  role  Role   @default(USER)
  cvs   Cv[]
}

model Cv {
  id     String  @id @default(uuid())
  name   String
  age    Int
  job    String
  user   User    @relation(fields: [userId], references: [id])
  userId String
  skills Skill[] @relation("CvToSkill")
}

model Skill {
  id          String @id @default(uuid())
  designation String @unique
  cvs         Cv[]   @relation("CvToSkill")
}
